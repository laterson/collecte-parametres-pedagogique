(async function init(){
  try{
    yearInput.value = getSchoolYear();
    await loadStructure();
    selCycle.addEventListener('change', loadAllForContext);
    selSpec.addEventListener('change', loadAllForContext);
  }catch(e){ console.warn('init failed:', e); setWarn('Init Ã©chouÃ©e'); }
})();
