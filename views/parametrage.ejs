        <button class="btn" id="btnAddStaff">+ Ajouter un enseignant</button>
        <button class="btn ghost" id="btnOpenFullFile">ðŸ“„ Fichier complet</button>
      </div>
      <table>
        <thead>
        <tr>
          <th>Nom</th><th class="w-120">Grade</th><th class="w-160">MatiÃ¨re</th><th class="w-120">Statut</th><th>Obs.</th><th class="w-140"></th>
        </tr>
        </thead>
        <tbody id="tbodyStaff"></tbody>
      </table>

      <hr style="border:none;border-top:1px solid #e5e7eb;margin:14px 0">

      <h2>Baselines par classe / discipline</h2>
      <div class="split">
        <!-- Liste classes -->
        <div>
          <div class="row" style="justify-content:space-between;align-items:center">
            <div class="muted">Classes (sÃ©lection)</div>
            <div class="row">
              <button class="btn ghost" id="btnLoadBaselinesExisting">â†» Charger existants</button>
              <button class="btn" id="btnLoadBaselinesDefaults">â†º Charger dÃ©fauts</button>
            </div>
          </div>
          <div id="classList" class="list" style="margin-top:8px"></div>
          <div class="row" style="margin-top:8px">
            <button class="btn" id="btnAddOneClass">+ Classe</button>
            <button class="btn warn" id="btnDelOneClass">ðŸ—‘ Supprimer</button>
