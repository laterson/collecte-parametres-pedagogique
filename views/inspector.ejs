  socket.on('chat:typing', payload=>{
    const from = payload?.from||'Quelqu‚Äôun';
    if(from === CONNECTED_USER.nom) return;
    typingEl.textContent = payload?.typing ? `${from} est en train d‚Äô√©crire‚Ä¶` : '';
    clearTimeout(typingClear);
