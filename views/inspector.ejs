                : (Array.isArray(c?.modules) ? c.modules : []);
    for (const d of discs){
      acc.Hd  += getN(d,'hD','Hd','heuresDues');
      acc.Hf  += getN(d,'hF','Hf','heuresFaites');
      acc.Lp  += getN(d,'lp','Lp','leconsPrevues');
